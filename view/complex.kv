
<Plot>:
    size: 100,100
    canvas:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            source: self.src
            pos: self.pos
            size: self.size


<PlotArea>:
    pl:inputplt
    pl2:outputplt

    canvas:
        Color:
            rgba: 1,.5,.7,1
        Rectangle:
            source: "plot.png"
            pos: self.pos
            size: self.size


    Plot:
        id:inputplt
        size_hint: None, None
        size: 320,240
        #pos: -320,10
        src: "input.png"

    Plot:
        id:outputplt
        size_hint: 1,1 #size hint je za velicinu u odnosu na roditelja ( Plot Area)
        #size: 320,240 #ako nema size hint-a onda je ovo apsolutna velicina
        pos: 0,0
        src: "output.png"


<AppView>:
    pl: plot
    #size_hint: None, None
    #size: self.parent.size

    canvas.before:
        Color:
            rgba: .4,.91,0.2,1
        Rectangle:
            pos:self.pos
            size: self.size

    PlotArea:
        id:plot
        #size_hint: None, None
        size: root.width-20,root.height-60
        pos: 5,20
        #src: "input.png"