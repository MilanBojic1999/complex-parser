
<Plot>:
    #size: 100,100
    canvas:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            source: self.src
            pos: self.pos
            size: self.size


<PlotArea>:
    pl1:inputplt

    canvas:
        Color:
            rgba: 1,.5,.7,1
        Ellipse:
            pos: self.pos
            size: self.size


    Plot:
        id:inputplt
        size_hint: 0.4,0.8
        pos_hint:  {'x':0.05, 'y':0.1}
        src: root.src

    ZoomDD:
        id: zdd
        size_hint: 0.06,0.025
        pos_hint:  {'x':0.05, 'y':0.94}
        text: self.btnnm


<AppView>:
    pl: plot1
    pl2: plot2

    canvas.before:
        Color:
            rgba: .4,.91,0.2,1
        Rectangle:
            pos:self.pos
            size: self.size

    PlotArea:
        id:plot1
        size_hint: None, None
        size: root.width-20,root.height-60
        pos: 5,20
        src: "input.png"

    PlotArea:
        id:plot2
        size_hint: None, None
        size: root.width-20,root.height-60
        pos: root.center_x+5,20
        src: "output.png"

    TextInput:
        id:tinput
        size: root.width/2,27
        center_y: root.center_y/10
        pos_hint: {'center_x': None}
        center_x: root.center_x/2


