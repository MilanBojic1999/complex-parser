
<Plot>:
    size: 100,200
    pos_hint: {'x': 0.0, 'y': 0.0}
    canvas:
        Color:
            rgba:0,1,1,1
        Ellipse:
            pos: self.pos
            size: self.size
    Image:
        size: 400,400
        #pos_hint: {'x': 0.10, 'y': 0.5}
        pos: self.parent.center_x/2,self.parent.center_y/2
        source: 'plot.png'


<AppView>:
    pl: plot

    size: 400,400
    canvas.before:
        Color:
            rgba: 1,.91,0.2,1
        Rectangle:
            pos:self.pos
            size: self.size

    Plot:
        id:plot