
<Plot>:
    image: img
    Image:
        id: img
        size: self.size
        pos: self.pos
        #source: 'input.png'

<PlotArea>:
    pl:plot
    pl2:plot2


    Plot:
        id:plot
        size: 100,50
        x:0
        center_y:self.center_y

    Plot:
        id:plot2
        size: 100,200
        x:self.center_x/2
        center_y:self.center_y


<AppView>:
    pl: plot

    size: 800,800
    canvas.before:
        Color:
            rgba: 1,.91,0.2,1
        Rectangle:
            pos:self.pos
            size: self.size

    Plot:
        id:plot
        image:
            source: 'input.png'