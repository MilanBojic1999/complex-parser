
<Plot>:
    #size: 100,100
    canvas:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            source: self.src
            pos: self.pos
            size: self.size


<PlotArea>:
    pl1:inputplt


    Plot:
        id:inputplt
        size_hint: 0.8,0.8
        pos_hint:  {'x':0.05, 'y':0.1}
        src: root.src

    ZoomDD:
        id: zdd
        size_hint: 0.18,0.040
        pos_hint:  {'x':0.05, 'y':0.04}
        text: self.btnnm


<AppView>:
    pl: plot1
    pl2: plot2

    canvas.before:
        Color:
            rgba: .4,.91,0.2,1
        Rectangle:
            pos:self.pos
            size: self.size

    PlotArea:
        id:plot1
        size_hint: None, None
        size: root.width/2-20,root.height-60
        pos: 5,30
        src: "input.png"

        TextInput:
            id: plot_ti
            size_hint: None,None
            size: root.width/3,25
            pos_hint: {'center_x':0.45,'y':.95}

    PlotArea:
        id:plot2
        size_hint: None, None
        size: root.width/2-20,root.height-60
        pos: root.center_x+5,30
        src: "output.png"

    TextInput:
        id:tinput
        size: root.width/2,27
        center_y: root.center_y/10
        pos_hint: {'center_x': None}
        center_x: root.center_x/2

    Button:
        id: tbutt:
        size: root.width/16,29
        center_y: root.center_y/10
        pos_hint: {'center_x': None}
        center_x: tinput.x+tinput.width+root.width/24
        text: "Fun!!!"

