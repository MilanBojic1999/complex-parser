
<Plot>:
    size: 100,100
    canvas:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            source: self.src
            pos: self.pos
            size: self.size


<PlotArea>:
    pl1:inputplt
    pl2:outputplt

    canvas:
        Color:
            rgba: 1,.5,.7,1
        Ellipse:
            pos: self.pos
            size: self.size


    Plot:
        id:inputplt
        size_hint: 0.4,0.8
        pos_hint:  {'x':0.05, 'y':0.1}
        src: "input.png"

    Plot:
        id:outputplt
        size_hint: 0.4,0.8
        pos_hint:  {'x':0.55, 'y':0.1}
        src: "output.png"
    ZoomDD:
        id: zdd
    Button:
        text: "Test"
        size_hint: 0.08,0.02
        pos_hint: {'x':0.05,'y':0.92}
        on_release: zdd.open(self)



<AppView>:
    pl: plot
    #size_hint: None, None
    #size: self.parent.size

    canvas.before:
        Color:
            rgba: .4,.91,0.2,1
        Rectangle:
            pos:self.pos
            size: self.size

    PlotArea:
        id:plot
        #size_hint: None, None
        size: root.width-20,root.height-60
        pos: 5,20
